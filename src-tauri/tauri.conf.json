{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "markdown-viewer",
  "version": "0.1.0",
  "identifier": "com.markdown-viewer.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown Viewer",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "fileAssociations": [
      {
        "ext": [
          "md"
        ],
        "name": "Markdown File",
        "description": "Markdown Document",
        "role": "Editor",
        "mimeType": "text/markdown"
      },
      {
        "ext": [
          "markdown"
        ],
        "name": "Markdown File",
        "description": "Markdown Document",
        "role": "Editor",
        "mimeType": "text/markdown"
      }
    ]
  }
}